<?xml version="1.0" encoding="UTF-8"?>

<?import com.example.trafficlights.TrafficLightsControl?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<VBox fx:id="VBoxRoot" alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trafficlights.Controller">
   <HBox fx:id="HBoxTrafficLights" alignment="CENTER" VBox.vgrow="ALWAYS">
      <children>
         <VBox fx:id="VBoxTrafficLights" alignment="CENTER" HBox.hgrow="ALWAYS">
            <children>
               <Circle fx:id="RedCircle" fill="WHITE" radius="50.0" stroke="BLACK" strokeType="INSIDE" />
               <Circle fx:id="YellowCircle" fill="WHITE" radius="50.0" stroke="BLACK" strokeType="INSIDE" />
               <Circle fx:id="GreenCircle" fill="WHITE" radius="50.0" stroke="BLACK" strokeType="INSIDE" />
            </children>
            <HBox.margin>
               <Insets left="10.0" right="10.0" />
            </HBox.margin>
         </VBox>
         <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
            <children>
               <ToggleButton fx:id="ToggleButtonTrafficLightState" mnemonicParsing="false" onAction="#ToggleButtonTrafficLightStateAction" text="Выкл." textAlignment="CENTER" />
               <Label fx:id="LabelStage" text="Фаза: Желтый мигающий">
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin>
               </Label>
               <Label fx:id="LabelTimeLeft" text="Осталось времени текущей фазы: бесконечность">
                  <VBox.margin>
                     <Insets top="5.0" />
                  </VBox.margin>
               </Label>
               <HBox>
                  <children>
                     <Label prefWidth="130.0" text="Красный, с">
                        <HBox.margin>
                           <Insets right="10.0" />
                        </HBox.margin>
                     </Label>
                     <TextField fx:id="TextFieldRedStage" prefWidth="60.0" text="3" />
                  </children>
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin>
               </HBox>
               <HBox>
                  <children>
                     <Label prefWidth="130.0" text="Красный/желтый, с">
                        <HBox.margin>
                           <Insets right="10.0" />
                        </HBox.margin>
                     </Label>
                     <TextField fx:id="TextFieldRedYellowStage" prefWidth="60.0" text="2" />
                  </children>
               </HBox>
               <HBox>
                  <children>
                     <Label prefWidth="130.0" text="Желтый, с">
                        <HBox.margin>
                           <Insets right="10.0" />
                        </HBox.margin>
                     </Label>
                     <TextField fx:id="TextFieldYellowStage" prefWidth="60.0" text="2" />
                  </children>
               </HBox>
               <HBox>
                  <children>
                     <Label prefWidth="130.0" text="Зеленый, с">
                        <HBox.margin>
                           <Insets right="10.0" />
                        </HBox.margin>
                     </Label>
                     <TextField fx:id="TextFieldGreenStage" prefWidth="60.0" text="3" />
                  </children>
               </HBox>
               <HBox>
                  <children>
                     <Label prefWidth="130.0" text="Зеленый мигающий, с">
                        <HBox.margin>
                           <Insets right="10.0" />
                        </HBox.margin>
                     </Label>
                     <TextField fx:id="TextFieldGreenBlinkingStage" prefWidth="60.0" text="2" />
                  </children>
               </HBox>
               <HBox>
                  <children>
                     <Label prefWidth="130.0" text="Желтый, с">
                        <HBox.margin>
                           <Insets right="10.0" />
                        </HBox.margin>
                     </Label>
                     <TextField fx:id="TextFieldYellowLastStage" prefWidth="60.0" text="2" />
                  </children>
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
               </HBox>
               <Label fx:id="LabelInvalidInput" alignment="CENTER" prefWidth="210.0" text="Недопустимый ввод" textAlignment="CENTER" textFill="RED" visible="false" />
               <Button fx:id="ButtonUpdateStages" mnemonicParsing="false" onAction="#ButtonUpdateStagesAction" text="Обновить продолжительность фаз">
                  <VBox.margin>
                     <Insets />
                  </VBox.margin>
               </Button>
            </children>
            <padding>
               <Insets bottom="50.0" top="50.0" />
            </padding>
         </VBox>
<!--         <TrafficLightsControl HBox.hgrow="ALWAYS" />-->
      </children>
   </HBox>
</VBox>
